@using PetShelterMVC.Controllers
@using PetShelter.Shared.Extensions
@model PetShelterMVC.ViewModels.AdoptPetEditVM

@{
    ViewBag.Title = "Adopt Pet";
}

<h2>Adopt Pet</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.PetId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PetId, Model.PetList, "Choose a Breed...",
                         new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PetId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adopt Pet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "List")
</div>
