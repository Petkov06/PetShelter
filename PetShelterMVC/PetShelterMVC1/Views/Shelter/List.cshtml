@model IEnumerable<PetShelterMVC.ViewModels.ShelterDetailsVM>

@{
    ViewBag.Title = "List";
}

<h2>Shelters</h2>
<p>
    @if (!User.IsInRole("User"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PetCapacity)
        </th>
        
        
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PetCapacity)
            </td>
            
           
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                @if (!User.IsInRole("User"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @: |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) @: |
                }
                
            </td>
        </tr>
    }

</table>